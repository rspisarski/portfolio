---
import { motion } from 'framer-motion';
import { slideUpAnimation } from '../../utils/animations';
import ScrollText from '../ScrollText.jsx';
interface Props {
    icon: any;
    text: string;
}

const { icon: Icon, text } = Astro.props;
---

<motion.h2
    client:load
    className="text-2xl font-bold mb-12 flex flex-row gap-4 items-center"
    viewport={{ once: true }}
    transition={{ duration: .5, ease: 'easeOut' }}
    {...slideUpAnimation.variants}
>
    <Icon className="text-purple-900" /> {text}
</motion.h2>

<ScrollText text={text} client:load/>